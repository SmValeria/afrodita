mixin menu(menu, className)
  nav(class=`menu ${className}__menu`)
    ul(class="menu__list")
      each item in menu
        li(class=`menu__item menu__item--${item.modifier}
        ${(item.name === pageName) ? "menu__item--active" : "" }
        `)
            a(
              class="menu__link"
              href=item.link
            ) #{item.name}