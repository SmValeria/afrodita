mixin icon-list(list, className)
  ul.icon-list(class=className)
    each item in list
      li.icon-list__item(class=`icon-list__item--${item.iconModifier}`)
        .icon-list__icon
        .icon-list__info
          h3.icon-list__title= item.title
          .icon-list__text= item.text
          ul.icon-list__inner-list
            each subItem in item.list
              li.icon-list__inner-item= subItem